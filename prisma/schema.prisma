generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String             @id @default(uuid())
  socialId       String
  socialProvider SocialProvider
  name           String?
  phone          String?
  isVerified     Boolean            @default(false)
  fcmToken       String?
  createdAt      DateTime           @default(now())
  updatedAt      DateTime           @updatedAt
  coupons        Coupon[]
  gameLogs       GameLog[]
  postVisits     PostVisit[]
  notifications  PushNotification[]
  rewards        Reward[]
  stamps         Stamp[]
  userEvents     UserEvent[]

  @@unique([socialProvider, socialId])
  @@index([phone])
  @@map("users")
}

model Event {
  id              String             @id @default(uuid())
  name            String
  type            EventType
  region          String
  description     String?
  imageUrl        String?
  startDate       DateTime           @db.Date
  endDate         DateTime           @db.Date
  couponStartTime String             @default("00:00")
  couponEndTime   String             @default("20:00")
  status          EventStatus        @default(UPCOMING)
  settings        Json?
  createdAt       DateTime           @default(now())
  updatedAt       DateTime           @updatedAt
  couponTemplates CouponTemplate[]
  coupons         Coupon[]
  eventMerchants  EventMerchant[]
  gameLogs        GameLog[]
  posts           Post[]
  notifications   PushNotification[]
  rewardTemplates RewardTemplate[]
  rewards         Reward[]
  settlements     Settlement[]
  stamps          Stamp[]
  userEvents      UserEvent[]

  @@index([status, startDate])
  @@map("events")
}

model UserEvent {
  id               String    @id @default(uuid())
  userId           String
  eventId          String
  userType         UserType
  isRunnerVerified Boolean   @default(false)
  isFinished       Boolean   @default(false)
  finishCode       String?
  finishedAt       DateTime?
  joinedAt         DateTime  @default(now())
  createdAt        DateTime  @default(now())
  event            Event     @relation(fields: [eventId], references: [id], onDelete: Cascade)
  user             User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, eventId])
  @@index([userId, eventId])
  @@map("user_events")
}

model Post {
  id             String       @id @default(uuid())
  eventId        String
  merchantId     String?
  name           String
  category       PostCategory
  description    String?
  imageUrl       String?
  address        String
  latitude       Decimal      @db.Decimal(10, 7)
  longitude      Decimal      @db.Decimal(10, 7)
  qrCode         String       @unique @default(uuid())
  isRewardPost   Boolean      @default(false)
  operatingHours Json?
  isActive       Boolean      @default(true)
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  postVisits     PostVisit[]
  event          Event        @relation(fields: [eventId], references: [id], onDelete: Cascade)
  merchant       Merchant?    @relation(fields: [merchantId], references: [id])
  rewards        Reward[]     @relation("RedeemPost")
  stamps         Stamp[]

  @@index([eventId, isActive])
  @@map("posts")
}

model PostVisit {
  id        String    @id @default(uuid())
  userId    String
  postId    String
  eventId   String
  visitedAt DateTime  @default(now())
  latitude  Decimal?  @db.Decimal(10, 7)
  longitude Decimal?  @db.Decimal(10, 7)
  gameLogs  GameLog[]
  post      Post      @relation(fields: [postId], references: [id], onDelete: Cascade)
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, eventId])
  @@map("post_visits")
}

model Merchant {
  id             String           @id @default(uuid())
  name           String
  category       MerchantCategory
  description    String?
  imageUrl       String?
  address        String
  latitude       Decimal          @db.Decimal(10, 7)
  longitude      Decimal          @db.Decimal(10, 7)
  phone          String
  businessNumber String
  bankName       String?
  bankAccount    String?
  bankHolder     String?
  status         MerchantStatus   @default(PENDING)
  isPostMerchant Boolean          @default(false)
  approvedAt     DateTime?
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
  coupons        Coupon[]
  eventMerchants EventMerchant[]
  merchantUsers  MerchantUser[]
  posts          Post[]
  settlements    Settlement[]

  @@index([status, category])
  @@map("merchants")
}

model MerchantUser {
  id           String           @id @default(uuid())
  merchantId   String
  email        String           @unique
  passwordHash String
  name         String
  phone        String
  role         MerchantUserRole @default(OWNER)
  fcmToken     String?
  lastLoginAt  DateTime?
  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt
  merchant     Merchant         @relation(fields: [merchantId], references: [id], onDelete: Cascade)

  @@map("merchant_users")
}

model EventMerchant {
  id             String   @id @default(uuid())
  eventId        String
  merchantId     String
  isPostMerchant Boolean  @default(false)
  commissionRate Decimal  @default(5.00) @db.Decimal(4, 2)
  isActive       Boolean  @default(true)
  createdAt      DateTime @default(now())
  event          Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  merchant       Merchant @relation(fields: [merchantId], references: [id], onDelete: Cascade)

  @@unique([eventId, merchantId])
  @@map("event_merchants")
}

model CouponTemplate {
  id             String           @id @default(uuid())
  eventId        String
  name           String
  category       MerchantCategory
  type           CouponType
  discountAmount Int
  description    String?
  maxIssueCount  Int?
  issuedCount    Int              @default(0)
  isActive       Boolean          @default(true)
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
  event          Event            @relation(fields: [eventId], references: [id], onDelete: Cascade)
  coupons        Coupon[]

  @@map("coupon_templates")
}

model Coupon {
  id             String           @id @default(uuid())
  userId         String
  eventId        String
  templateId     String
  merchantId     String?
  category       MerchantCategory
  type           CouponType
  discountAmount Int
  qrCode         String           @unique @default(uuid())
  status         CouponStatus     @default(ACTIVE)
  validFrom      DateTime
  validUntil     DateTime
  usedAt         DateTime?
  createdAt      DateTime         @default(now())
  event          Event            @relation(fields: [eventId], references: [id], onDelete: Cascade)
  merchant       Merchant?        @relation(fields: [merchantId], references: [id])
  template       CouponTemplate   @relation(fields: [templateId], references: [id])
  user           User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  gameLogs       GameLog[]

  @@index([userId, status])
  @@index([qrCode])
  @@map("coupons")
}

model Stamp {
  id          String   @id @default(uuid())
  userId      String
  eventId     String
  postId      String
  collectedAt DateTime @default(now())
  event       Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  post        Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, eventId, postId])
  @@index([userId, eventId])
  @@map("stamps")
}

model RewardTemplate {
  id                String     @id @default(uuid())
  eventId           String
  name              String
  tier              RewardTier
  requiredStamps    Int
  description       String?
  imageUrl          String?
  totalQuantity     Int
  remainingQuantity Int
  isActive          Boolean    @default(true)
  createdAt         DateTime   @default(now())
  updatedAt         DateTime   @updatedAt
  event             Event      @relation(fields: [eventId], references: [id], onDelete: Cascade)
  rewards           Reward[]

  @@map("reward_templates")
}

model Reward {
  id           String         @id @default(uuid())
  userId       String
  eventId      String
  templateId   String
  redeemPostId String?
  tier         RewardTier
  qrCode       String         @unique @default(uuid())
  status       RewardStatus   @default(AVAILABLE)
  redeemedAt   DateTime?
  createdAt    DateTime       @default(now())
  event        Event          @relation(fields: [eventId], references: [id], onDelete: Cascade)
  redeemPost   Post?          @relation("RedeemPost", fields: [redeemPostId], references: [id])
  template     RewardTemplate @relation(fields: [templateId], references: [id])
  user         User           @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, eventId])
  @@map("rewards")
}

model GameLog {
  id             String           @id @default(uuid())
  userId         String
  eventId        String
  postVisitId    String
  gameType       GameType
  resultCategory MerchantCategory
  couponId       String
  playedAt       DateTime         @default(now())
  coupon         Coupon           @relation(fields: [couponId], references: [id])
  event          Event            @relation(fields: [eventId], references: [id], onDelete: Cascade)
  postVisit      PostVisit        @relation(fields: [postVisitId], references: [id])
  user           User             @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("game_logs")
}

model Settlement {
  id                  String           @id @default(uuid())
  merchantId          String
  eventId             String
  periodStart         DateTime         @db.Date
  periodEnd           DateTime         @db.Date
  totalCoupons        Int
  totalDiscountAmount Int
  commissionAmount    Int              @default(0)
  settlementAmount    Int
  status              SettlementStatus @default(PENDING)
  completedAt         DateTime?
  transactionId       String?
  createdAt           DateTime         @default(now())
  updatedAt           DateTime         @updatedAt
  event               Event            @relation(fields: [eventId], references: [id], onDelete: Cascade)
  merchant            Merchant         @relation(fields: [merchantId], references: [id], onDelete: Cascade)

  @@index([merchantId, eventId])
  @@map("settlements")
}

model PushNotification {
  id          String             @id @default(uuid())
  userId      String?
  eventId     String?
  title       String
  body        String
  type        NotificationType
  data        Json?
  status      NotificationStatus @default(PENDING)
  scheduledAt DateTime?
  sentAt      DateTime?
  createdAt   DateTime           @default(now())
  event       Event?             @relation(fields: [eventId], references: [id], onDelete: Cascade)
  user        User?              @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("push_notifications")
}

model AdminUser {
  id           String    @id @default(uuid())
  email        String    @unique
  passwordHash String
  name         String
  role         AdminRole @default(OPERATOR)
  lastLoginAt  DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  @@map("admin_users")
}

enum SocialProvider {
  KAKAO
  NAVER
}

enum UserType {
  RUNNER
  VISITOR
  PARTICIPANT
}

enum EventType {
  RUNNING
  FESTIVAL
  SINGLE
}

enum EventStatus {
  UPCOMING
  ACTIVE
  ENDED
}

enum PostCategory {
  TOURIST
  BOOTH
  PERFORMANCE
  RESTAURANT
  CAFE
  ACCOMMODATION
  OTHER
}

enum MerchantCategory {
  RESTAURANT
  CAFE
  PERFORMANCE
  ACCOMMODATION
  OTHER
}

enum MerchantStatus {
  PENDING
  APPROVED
  REJECTED
  SUSPENDED
}

enum MerchantUserRole {
  OWNER
  STAFF
}

enum CouponType {
  DISCOUNT_5000
  DISCOUNT_10000
  FREE_DRINK
  ONE_PLUS_ONE
  PERCENT_50
  CUSTOM
}

enum CouponStatus {
  ACTIVE
  USED
  EXPIRED
}

enum RewardTier {
  TIER_1
  TIER_3
  TIER_5
  TIER_10
}

enum RewardStatus {
  AVAILABLE
  REDEEMED
  EXPIRED
}

enum GameType {
  LADDER
  ROULETTE
  CAPSULE
  CARD
  SLOT
}

enum SettlementStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

enum NotificationType {
  EVENT_REMINDER
  COUPON_ACQUIRED
  COUPON_EXPIRING
  STAMP_ACHIEVED
  FINISH_REWARD
  NEARBY_POST
}

enum NotificationStatus {
  PENDING
  SENT
  FAILED
}

enum AdminRole {
  SUPER_ADMIN
  ADMIN
  OPERATOR
}
